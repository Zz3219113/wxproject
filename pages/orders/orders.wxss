/* pages/order/order.wxss */
.topTabSwiper
{
  border-bottom: 2rpx solid #b0b0b0;
  display: flex;

}
.topTabSwiper .topTab
{
  width: 33.333%;
  text-align: center;
  padding: 20rpx 0;
  color: #5e5e5e;
}
.topTabSwiper .topTabSelected
{
  color: #00adb5;
  border-bottom: 2rpx solid #00adb5;
}

.container{
  width: 100%;
  height: 100%;
}

.container-hidden
{
  display: none;
}

.order
{
  width: 100%;
  border-bottom: 2rpx solid #b0b0b0;
}

.order .header
{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content:space-between;
}

.order .last
{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items:flex-end;
  margin-top: 32rpx;
  margin-bottom: 32rpx;
}

.last .flex-price,.last .flex-buttom
{
  font-size:26rpx;
  margin-right: 10rpx;
}
.last .flex-buttom
{
  border: 2rpx solid #b0b0b0;
  margin-top: 32rpx;
  padding: 16rpx;
  font-size: 30rpx;
  color: #393e46;
}

.header .camtingInfo
{
  display: flex;
  flex-direction:row;
  align-items: center;
}

.camtingInfo .img
{
  margin: 10rpx;
  height: 80rpx;
  width: 80rpx;
  border: 2rpx solid #b0b0b0;
}

.camtingInfo .cantingName
{
  font-size: 34rpx;
  font-weight:bold;
  color: #393e46;
}

.header .orderState
{
  color: #5e5e5e;
  margin-right: 10rpx;
}

.order .content
{
  width: 100%;
  display: flex;
  direction: column;
}

.content .item
{
  margin-top: 16rpx;
  color: #5e5e5e;
  width: 100%;
}

.item .itemName
{
  color: #5e5e5e;
  padding-left: 100rpx;
  float: left;
}
.item .itemNum
{
  float: right;
  margin-right: 10rpx;
}

.arrowhead
{
  margin-left: 24rpx;
  width: 24rpx;
  height: 24rpx;
}